{
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["prettier"],
	"rules": {
		"prettier/prettier": [
			"error",
			{
				"printWidth": 100,
				"arrowParens": "avoid",
				"semi": false,
				"singleQuote": true,
				"jsxSingleQuote": true,
				"useTabs": true,
				"bracketSameLine": false,
				"trailingComma": "all",
				"endOfLine": "auto"
			}
		],
		"eol-last": "warn",
		"no-duplicate-imports": "warn",
		"object-curly-spacing": ["error", "always"],
		"array-bracket-spacing": ["error", "never"],
		"comma-spacing": "error",
		"no-multiple-empty-lines": ["error", { "max": 1 }],
		"no-trailing-spaces": "warn",
		"object-shorthand": ["error", "always"]
	}
}
